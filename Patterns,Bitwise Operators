1.

#include<stdio.h>
int main()
{
    int i,j,r;
    printf("enter number of rows:");
    scanf("%d",&r);
    for(i=0;i<=r;i++)
    {
        for(j=0;j<=i;j++)
        {
            printf("*");
        }
        printf("\n");
    }
    return 0;
}

Output:
enter number of rows5
*
**
***
****
*****
******

2.

#include<stdio.h>
int main()
{
    int i,j,r;
    printf("enter number of rows:");
    scanf("%d",&r);
    for(i=0;i<=r;i++)
    {
        for(j=0;j<=(r-i);j++)
        {
            printf(" ");
        }
        for(j=0;j<=i;j++)
        {
           printf("*");  
        }
        printf("\n");
    }
    return 0;
}

Output:

enter number of rows5
      *
     **
    ***
   ****
  *****
 ******

