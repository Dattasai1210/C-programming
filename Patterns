1.

#include<stdio.h>
int main()
{
    int i,j,r;
    printf("enter number of rows:");
    scanf("%d",&r);
    for(i=0;i<=r;i++)
    {
        for(j=0;j<=i;j++)
        {
            printf("*");
        }
        printf("\n");
    }
    return 0;
}

Output:
enter number of rows5
*
**
***
****
*****
******

2.

#include<stdio.h>
int main()
{
    int i,j,r;
    printf("enter number of rows:");
    scanf("%d",&r);
    for(i=0;i<=r;i++)
    {
        for(j=0;j<=(r-i);j++)
        {
            printf(" ");
        }
        for(j=0;j<=i;j++)
        {
           printf("*");  
        }
        printf("\n");
    }
    return 0;
}

Output:

enter number of rows5
      *
     **
    ***
   ****
  *****
 ******

3.

#include<stdio.h>
int main()
{
    int i,j,r;
    printf("enter number of rows:");
    scanf("%d",&r);
    for(i=0;i<=r;i++)
    {
        for(j=i;j<=r;j++)
        {
            printf("*");
        }
        printf("\n");
    }
    return 0;
}

Output:

enter number of rows:5
******
*****
****
***
**
*

4.

#include<stdio.h>
int main()
{
    int i,j,r;
    printf("enter number of rows:");
    scanf("%d",&r);
    for(i=0;i<=r;i++)
    {
        for(j=0;j<=i;j++)
        {
            printf(" ");
        }
        for(j=i;j<=r;j++)
        {
           printf("*");  
        }
        printf("\n");
    }
    return 0;
}

Output:

enter number of rows:5
 ******
  *****
   ****
    ***
     **
      *

5.

#include<stdio.h>
int main()
{
    int i,j,r,k;
    printf("enter number of rows:");
    scanf("%d",&r);
    for(i=1;i<=r;i++)
    {
        for(j=1;j<=(r-i);j++)
        {
            printf(" ");
        }
        for(k=1;k<=(2*i-1);k++)
        {
           printf("*");  
        }
        printf("\n");
    }
    return 0;
}

Output:

enter number of rows:5
    *
   ***
  *****
 *******
*********
