1.Sorting using pointers

#include<stdio.h>
int main()
{
    int arr[]={10,5,1,4,9};
    int *ptr=arr;
    for(int i=0;i<5;i++)
    {
        for(int j=i;j<5;j++)
        {
            if(*(ptr+i)>*(ptr+j))
            {
                int temp=*(ptr+i);
                *(ptr+i)=*(ptr+j);
                *(ptr+j)=temp;
            }
        }
    }
    for(int i=0;i<5;i++)
    printf("%d ",*(ptr+i));
    return 0;
}

2.Reverse the n elements using pointers

#include<stdio.h>
#include<string.h>
int main()
{
    char str[]="venugopal";
    char *ptr=str;
    int n=5,i,l;
    l=strlen(str);
    printf("String is:%s\n",str);
    printf("%ld\n",strlen(str));
    for(i=0;i<n/2;i++)
    {
        char temp=(*(ptr+(l-n+i)));
        (*(ptr+(l-n+i)))=(*(ptr+(l-i-1)));
        (*(ptr+(l-i-1)))=temp;
    }
    printf("%s",str);
    return 0;
}

3.Input and print array elements

#include <stdio.h>
#define N 5
int main()
{
    int arr[N],arr1[N];
    int *ptr=arr;
    int *ptr1=arr1;
    for(int i=0;i<N;i++)
    {
        scanf("%d",(ptr+i));
    }
    for(int i=0;i<N;i++)
    {
        *(ptr1+i)=*(ptr+i);
    }
    for(int i=0;i<N;i++)
    {
        printf("%d ",*(ptr1+i));
    }
    return 0;
}

4.Swapping 2 arrays using pointers

#include <stdio.h>
#define N 5
int main()
{
    int arr[N],arr1[N];
    int *ptr=arr;
    int *ptr1=arr1;
    for(int i=0;i<N;i++)
    {
        scanf("%d",(ptr+i));
    }
    for(int i=0;i<N;i++)
    {
        scanf("%d",(ptr1+i));
    }
    for(int i=0;i<N;i++)
    {
        int temp=*(ptr+i);
        *(ptr+i)=*(ptr1+i);
        *(ptr1+i)=temp;
    }
    for(int i=0;i<N;i++)
    {
        printf("%d ",*(ptr+i));
    }
    printf("\n");
    for(int i=0;i<N;i++)
    {
        printf("%d ",*(ptr1+i));
    }
    return 0;
}

5.Reverse an array using pointers

#include <stdio.h>
#define N 5
int main()
{
    int arr[N];
    int *ptr=arr;
    for(int i=0;i<N;i++)
    {
        scanf("%d",(ptr+i));
    }
    for(int i=0;i<N;i++)
    {
        ptr=&arr[N-1];
    }
    for(int i=0;i<N;i++)
    {
        printf("%d ",*(ptr--));
    }
    return 0;
    
}

6.Searching an element in array

#include <stdio.h>
#define N 5
int main()
{
    int arr[N],count=0,n=5;
    int *ptr=arr;
    for (int i=0;i<N;i++)
    {
        scanf("%d",(ptr+i));
    }
    for(int i=0;i<N;i++)
    {
        if(*(ptr+i)/n==1)
        {
            count++;
        }
    }
    if(count>0)
    {
        printf("element found");
    }
    else
    {
        printf("not found");
    }
    return 0;
}

7.String Length using Pointers

#include<stdio.h>
#include<string.h>
int main()
{
    int i;
    char str[]="Hi";
    char *ptr=str;
    strlen(str);
    ptr=str;
    while(*ptr!='\0')
    {
        ptr++;
        i++;
    }
    printf("Length of string:%d",i);
    return 0;
}
